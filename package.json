    "version": "1.4.1",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "start": "node src/app.js",
        "dev": "nodemon src/app.js",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --ext .js,.ts --fix",
        "format": "prettier --write \"**/*.{js,ts,json,md}\"",
